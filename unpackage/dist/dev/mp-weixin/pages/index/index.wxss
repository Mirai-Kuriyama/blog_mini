page {
  background-image: var(--gradualBlue);
  width: 100vw;
  overflow: hidden;
}
.index {
  width: 100vw;
  height: 100vh;
}
.index .DrawerPage {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0vw;
  background-color: #f1f1f1;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.index .DrawerPage.show {
  -webkit-transform: scale(0.9, 0.9) translateZ(0);
          transform: scale(0.9, 0.9) translateZ(0);
  left: 85vw;
  box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
  -webkit-transform-origin: 0;
          transform-origin: 0;
}
.index .DrawerWindow {
  position: absolute;
  width: 85vw;
  height: 100vh;
  left: 0;
  top: 0;
  -webkit-transform: scale(0.9, 0.9) translateX(-100%) translateZ(0);
          transform: scale(0.9, 0.9) translateX(-100%) translateZ(0);
  opacity: 0;
  pointer-events: none;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  padding: 30rpx 0;
}
.index .DrawerWindow.show {
  -webkit-transform: scale(1, 1) translateX(0%) translateZ(0);
          transform: scale(1, 1) translateX(0%) translateZ(0);
  opacity: 1;
  pointer-events: all;
}
.index .DrawerWindow .switch-list {
  padding: 0 30rpx;
}
.index .DrawerWindow .notice {
  padding: 30rpx;
}
.index .DrawerClose {
  position: absolute;
  width: 40vw;
  height: 100vh;
  right: 0;
  top: 0;
  color: transparent;
  padding-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background-image: -webkit-linear-gradient(left, rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.6));
  background-image: linear-gradient(90deg, rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.6));
  letter-spacing: 5px;
  font-size: 50rpx;
  opacity: 0;
  pointer-events: none;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.index .DrawerClose.show {
  opacity: 1;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  pointer-events: all;
  width: 15vw;
  color: #fff;
}

